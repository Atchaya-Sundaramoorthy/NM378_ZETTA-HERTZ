<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/toprelative"
            android:layout_height="350dp"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:background="@drawable/homebg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/welcome"
                android:text="@string/welcome"
                android:letterSpacing="0.05"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorpalet1"
                android:textSize="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:fontFamily="@font/comicbd"
                android:typeface="sans">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="loading...."
                android:id="@+id/displayname"
                android:letterSpacing="0.05"
                android:layout_below="@+id/welcome"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/colorpalet2"
                android:textSize="25dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="0dp"
                android:textStyle="bold"
                android:fontFamily="@font/comicbd"
                android:typeface="sans">

            </TextView>
            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/language"
                android:layout_gravity="right"
                android:id="@+id/change_language"
                android:layout_alignParentRight="true"
                android:layout_marginTop="170dp"
                android:layout_marginRight="20dp"
                android:layout_height="40dp">

            </ImageView>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toprelative"
            android:layout_marginTop="-130dp"
            android:orientation="vertical">
            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:alignmentMode="alignMargins"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:columnCount="2"
                android:columnOrderPreserved="false"
                android:rowCount="3"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="15dp"
                    android:elevation="6dp"
                    android:background="@color/colorpalet1"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center"
                        android:id="@+id/detectclick"
                        android:orientation="vertical"
                        android:background="@drawable/card_design"
                        android:padding="0dp">

                        <ImageView
                            android:id="@+id/detect"
                            android:layout_marginTop="10dp"
                            android:layout_width="50dp"
                            android:layout_gravity="center"
                            android:layout_height="50dp"
                            android:src="@drawable/detect"
                            android:background="@android:color/transparent"

                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/detect"
                            android:textColor="@color/colorpalet5"

                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="15dp"
                    android:elevation="6dp"
                    android:background="@color/colorpalet1"

                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/linearcropdeatils"

                        android:layout_gravity="center"
                        android:background="@drawable/card_design"
                        android:orientation="vertical"
                        android:padding="0dp">

                        <ImageView
                            android:id="@+id/details"
                            android:layout_marginTop="10dp"
                            android:layout_width="52dp"
                            android:src="@drawable/history"

                            android:layout_height="43dp"
                            android:layout_gravity="center"
                            android:background="@android:color/transparent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/crop_history"
                            android:textColor="@color/colorpalet5"

                            android:textSize="15sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="15dp"
                    android:elevation="6dp"
                    android:background="@color/colorpalet1"

                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/cropsearch"

                        android:layout_gravity="center"
                        android:background="@drawable/card_design"
                        android:orientation="vertical"
                        android:padding="0dp">

                        <ImageView

                            android:id="@+id/search"
                            android:layout_marginTop="10dp"
                            android:layout_width="50dp"
                            android:layout_gravity="center"
                            android:layout_height="50dp"
                            android:src="@drawable/details"
                            android:background="@android:color/transparent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/crop_details"
                            android:textSize="15sp"
                            android:textColor="@color/colorpalet5"

                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="15dp"
                    android:background="@color/colorpalet1"

                    android:elevation="6dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/findlinear"

                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/card_design"
                        android:padding="0dp">

                        <ImageView

                            android:layout_width="50dp"
                            android:id="@+id/find"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center"
                            android:src="@drawable/find"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/find"
                            android:textSize="15sp"
                            android:textColor="@color/colorpalet5"

                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="15dp"
                    android:background="@color/colorpalet1"

                    android:elevation="6dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/ar_scene"

                        android:layout_gravity="center"
                        android:background="@drawable/card_design"
                        android:orientation="vertical"
                        android:padding="0dp">

                        <ImageView

                            android:layout_width="50dp"
                            android:layout_marginTop="10dp"
                            android:id="@+id/legal"
                            android:src="@drawable/ar"
                            android:layout_gravity="center"
                            android:layout_height="50dp"
                            android:background="@android:color/transparent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:text="@string/ar"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorpalet5"

                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:layout_margin="15dp"
                    android:background="@color/colorpalet1"

                    android:elevation="6dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="6dp">

                    <LinearLayout
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/live_predict"


                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:background="@drawable/card_design"
                        android:padding="0dp">

                        <ImageView

                            android:id="@+id/services"
                            android:layout_width="50dp"
                            android:layout_marginTop="10dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center"
                            android:src="@drawable/live"
                            android:background="@android:color/transparent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:text="@string/live_prediction"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/colorpalet5"

                            android:textSize="15sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>





            </GridLayout>
        </LinearLayout>


    </RelativeLayout>



</ScrollView>